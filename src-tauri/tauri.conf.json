{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ThreadWriter",
  "version": "0.1.0",
  "identifier": "com.mkueper.threadwriter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ThreadWriter",
        "label": "main",
        "width": 1366,
        "height": 720,
        "minWidth": 800,
        "minHeight": 560,
        "devtools": false,
        "resizable": true,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
